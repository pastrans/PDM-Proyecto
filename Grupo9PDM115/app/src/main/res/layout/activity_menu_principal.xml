<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Activities.MenuPrincipal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="?android:listDivider"
            android:dividerPadding="16dp">

            <!-- Control de usuarios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Icono control usuario -->
                <LinearLayout
                    android:id="@+id/layoutUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_control_usuario"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="@string/txtControlUsuario"
                        android:gravity="center_vertical"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!-- Opciones control usuario -->
                <LinearLayout
                    android:id="@+id/layoutOpcionesUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:orientation="vertical"
                        android:showDividers="middle"
                        android:divider="?android:listDivider"
                        android:dividerPadding="32dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="@string/txtGestionarUsuario"
                            android:gravity="center_vertical"
                            android:layout_marginStart="54dp"
                            android:layout_marginLeft="54dp"
                            android:textSize="18sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="@string/txtGestionarRol"
                            android:gravity="center_vertical"
                            android:layout_marginStart="54dp"
                            android:layout_marginLeft="54dp"
                            android:textSize="18sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.70"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/txtNombreFeriado" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1.3"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:id="@+id/editNombreFeriado"
                    android:inputType="text"
                    android:maxLength="30"/>
            </LinearLayout>

            <!-- Control de usuarios -->
            <LinearLayout
                android:id="@+id/layoutControlAcademico"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_control_academico"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="@string/txtControlAcademico"
                    android:gravity="center_vertical"
                    android:textSize="20sp"/>
            </LinearLayout>

            <!-- Control de locales -->
            <LinearLayout
                android:id="@+id/layoutControlLocales"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_control_locales"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="@string/txtControlLocales"
                    android:gravity="center_vertical"
                    android:textSize="20sp"/>
            </LinearLayout>

            <!-- Reservas -->
            <LinearLayout
                android:id="@+id/layoutReservas"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_reservas"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="@string/txtReservas"
                    android:gravity="center_vertical"
                    android:textSize="20sp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>