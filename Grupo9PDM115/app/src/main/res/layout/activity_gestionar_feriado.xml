<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".GestionarFeriado">

    <TextView
        android:text="@string/titGestionarFeriado"
        android:textSize="30sp"
        android:paddingBottom="5dp"/>

    <TableRow>
        <TextView
            android:text="@string/txtNombre" />

        <EditText
            android:id="@+id/editNombre"
            android:inputType="text"
            android:maxLength="30"  />
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/txtFecha" />
        <DatePicker
            android:id="@+id/fechaDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />
    </TableRow>

    <Button
        android:onClick="btnConsultarGFeriado"
        android:text="@string/btnConsultarGFeriado"
        tools:ignore="OnClick" />

    <Button
        android:onClick="btnNuevoFeriado"
        android:text="@string/btnNuevoGFeriado"
        tools:ignore="OnClick" />

    <Button
        android:onClick="btnEditarGFeriado"
        android:text="@string/btnEditarGFeriado"
        tools:ignore="OnClick" />

    <Button
        android:onClick="btnEliminarGFeriado"
        android:text="@string/btnEliminarGFeriado"
        tools:ignore="OnClick" />

    <Button
        android:onClick="btnRegresarGFeriado"
        android:text="@string/btnRegresarGFeriado"
        tools:ignore="OnClick" />

</TableLayout>