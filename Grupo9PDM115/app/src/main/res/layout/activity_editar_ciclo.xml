<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1">
    tools:context=".EditarCiclo">
    <TextView
        android:text="@string/EditarCiclo"
        android:textSize="30sp"
        android:paddingBottom="5dp"/>
    <TableRow>
        <TextView android:text="@string/nombreCiclo" />
        <EditText
            android:id="@+id/editNombreCiclo"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>

        <TextView
            android:text="@string/finCiclo"
            android:textSize="14sp" />

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />
    </TableRow>
    <RadioButton
        android:id="@+id/radiobutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estadoRadioButton" />
    <TableRow>

        <Button
            android:onClick="editartCiclo"
            android:text="@string/editarCiclo" />

        <Button
            android:onClick="limpiarTexto"
            android:text="@string/limpiarCiclo" />
    </TableRow>
    <Button
        android:onClick="atrasCiclo"
        android:text="@string/atrasCiclo" />

</TableLayout>