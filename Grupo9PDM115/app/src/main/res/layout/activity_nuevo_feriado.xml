<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".NuevoFeriado">

    <TextView
        android:text="@string/nuevo_feriado"
        android:textSize="30sp"
        android:paddingBottom="5dp"/>

    <TableRow>
        <TextView
            android:text="Nombre:" />

        <EditText
            android:id="@+id/text_nombre"
            android:hint="@string/text_nombre" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Descripcion:" />
        <EditText
            android:id="@+id/text_descripcion"
            android:layout_height="100dp"
            android:hint="@string/text_descripcion" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Fecha Inicio:" />
        <TextView
            android:id="@+id/fechaInicio"
            android:text="Fecha" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Fecha Finalizacion:" />
        <TextView
            android:id="@+id/fechaFin"
            android:text="Fecha" />
    </TableRow>

    <Button
        android:id="@+id/btCrearFeriado"
        android:text="Crear" />
    <Button
        android:id="@+id/btCancelar"
        android:text="Cancelar" />
</TableLayout>