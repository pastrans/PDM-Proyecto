<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".GestionarTipoGrupo">

    <TextView
        android:text="@string/titGestionarTipoGrupo"
        android:textSize="30sp"
        android:paddingBottom="5dp"/>

    <TableRow>
        <TextView
            android:text="@string/txtTipoGrupo" />

        <EditText
            android:id="@+id/editTipoGrupo"
            android:inputType="text"
            android:maxLength="25"/>
    </TableRow>

    <Button
        android:onClick="btnConsultarGTipoGrupo"
        android:text="Consultar"
        tools:ignore="OnClick"  />
    <Button
        android:onClick="btnNuevoGTipoGrupo"
        android:text="Nuevo"
        tools:ignore="OnClick" />
    <Button
        android:onClick="btnEditarGTipoGrupo"
        android:text="Editar"
        tools:ignore="OnClick" />
    <Button
        android:onClick="btnEliminarGTipoGrupo"
        android:text="Eliminar"
        tools:ignore="OnClick" />
    <Button
        android:onClick="btnRegresarGTipoGrupo"
        android:text="Regresar"
        tools:ignore="OnClick" />


</TableLayout>