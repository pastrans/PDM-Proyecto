<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft= "16dp"
    android:paddingRight= "16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/txtCodMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="PDM"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="PDM" />

    <TextView
        android:id="@+id/txtnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtCodMateria"
        android:layout_below="@id/txtCodMateria"
        android:text="Inicio"
        tools:text="Programación para dispositivos móviles"/>

    <TextView
        android:id="@+id/txtIdUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnombre"
        android:layout_alignLeft="@id/txtnombre"
        android:text="Fin"
        tools:text="ciencias básicas" />

    <TextView
        android:id="@+id/txtMasividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtIdUnidad"
        android:layout_below="@id/txtIdUnidad"
        android:text="No masiva"
        tools:text="No masiva"/>


</RelativeLayout>