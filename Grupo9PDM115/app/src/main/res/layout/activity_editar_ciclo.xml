<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1">
    tools:context=".EditarCiclo">
    <TextView
        android:text="@string/titEditarCiclo"
        android:textSize="30sp"
        android:paddingBottom="5dp"/>
    <TableRow>
        <TextView android:text="@string/txtNombreCiclo" />
        <EditText
            android:id="@+id/editNombreCiclo"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>

        <TextView
            android:text="@string/txtFinCiclo"
            android:textSize="14sp" />

        <DatePicker
            android:id="@+id/finCicloDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />
    </TableRow>
    <RadioButton
        android:id="@+id/estadoRadiobutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estadoRadioButton" />
    <TableRow>

        <Button
            android:onClick="btnEditarECiclo"
            android:text="@string/btnEditarECiclo" />

        <Button
            android:onClick="btnLimpiarTextoECiclo"
            android:text="@string/btnLimpiarTextoECiclo" />
    </TableRow>
    <Button
        android:onClick="btnRegresarECiclo"
        android:text="@string/btnRegresarECiclo" />
</TableLayout>