<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".Activities.CicloMateria.NuevoCicloMateria">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar materia del ciclo"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <TableRow>

        <TextView android:text="Código de materia:" />
        <EditText
            android:id="@+id/editMateria"
            android:digits="QWERTYUIOPASDFGHJKLÑZXCVBNMqwertyuiopasdfghjklñzxcvbnm1234567890"
            android:inputType="text"
            android:maxLength="6" />

    </TableRow>
    <TableRow>

        <TextView android:text="Ciclo:" />
        <Spinner
            android:id="@+id/spinnerCiclo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </TableRow>
    <TableRow>

        <Button
            android:onClick="btnactualizarCicloMateria"
            android:text="Actualizar"
            tools:ignore="OnClick" />

        <Button
            android:onClick="btnLimpiarNCicloMateria"
            android:text="@string/btnLimpiarNCicloMateria"
            tools:ignore="OnClick" />
    </TableRow>

    <Button
        android:onClick="btnRegresar"
        android:text="@string/btnRegresarNCicloMateria"
        tools:ignore="OnClick" />


</TableLayout>