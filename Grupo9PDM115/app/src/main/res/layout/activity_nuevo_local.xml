<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".NuevoLocal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NuevoLocal"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TableRow>

        <TextView android:text="@string/nombreLocal" />
        <EditText
            android:id="@+id/nombreLocal"
            android:inputType="text"
            android:maxLength="25" />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/capacidad" />
        <EditText
            android:id="@+id/capacidad"
            android:inputType="numberDecimal"
            android:maxLength="30"
            />
    </TableRow>
    <TableRow>

        <TextView android:text="@string/tipoLocal" />
        <Spinner
            android:id="@+id/planets_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>

        <Button
            android:onClick="agregarLocal"
            android:text="@string/agregarLocal"
            tools:ignore="OnClick" />

        <Button
            android:onClick="limpiarTexto"
            android:text="@string/limpiarLocal"
            tools:ignore="OnClick" />
    </TableRow>
    <Button
        android:onClick="atrasLocal"
        android:text="@string/atrasLocal"
        tools:ignore="OnClick" />


</TableLayout>