<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:padding="15dp">

    <TextView
        android:text="@string/titNuevoCiclo"
        android:textSize="30sp"
        android:paddingBottom="5dp"/>

    <TableRow>
        <TextView
            android:text="@string/txtNombreCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"/>
        <EditText
            android:id="@+id/editNombreCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/txtInicioCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            />
        <EditText
            android:id="@+id/editInicioCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="10"
            android:focusable="false"
            android:clickable="true"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/txtFinCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" />
        <EditText
            android:id="@+id/editFinCiclo"
            android:inputType="date"
            android:maxLength="10"
            android:focusable="false"
            android:clickable="true"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/txtInicioPeriodoClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" />
        <EditText
            android:id="@+id/editInicioClases"
            android:inputType="date"
            android:maxLength="10"
            android:focusable="false"
            android:clickable="true"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/txtFinPeriodoClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" />
        <EditText
            android:id="@+id/editFinClases"
            android:inputType="date"
            android:maxLength="10"
            android:focusable="false"
            android:clickable="true"/>
    </TableRow>

    <TableRow>

        <Button
            android:onClick="agregarCiclo"
            android:text="@string/btnAgregarNCiclo" />

        <Button
            android:onClick="limpiarTexto"
            android:text="@string/btnLimpiarTextoNCiclo" />
    </TableRow>

</TableLayout>