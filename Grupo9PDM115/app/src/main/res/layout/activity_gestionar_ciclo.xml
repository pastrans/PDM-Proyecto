<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1">
    // cambiar a wrap_content el height

    <TextView
        android:text="@string/titGestionarCiclo"
        android:textSize="30sp"
        android:paddingBottom="5dp"
        />
    <TableRow>
        <TextView android:text="@string/txtIdCiclo" />
        <EditText
            android:id="@+id/editIdciclo"
            android:inputType="numberDecimal"
            android:maxLength="30"
            />

    </TableRow>
    <TableRow>
        <TextView android:text="@string/txtNombreCiclo" />
        <EditText
            android:id="@+id/editNombreCiclo"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>
        <Button
            android:onClick="btnConsultarGCiclo"
            android:text="@string/btnConsultarGCiclo" />
    </TableRow>

    <Button
        android:onClick="btnNuevoGCiclo"
        android:text="@string/btnNuevoGCiclo" />

    <Button
        android:onClick="btnEditarGCiclo"
        android:text="@string/btnEditarGCiclo" />

    <Button
        android:onClick="btnEliminarGCiclo"
        android:text="@string/btnEliminarGCiclo" />

    <Button
        android:onClick="btnRegresarGCiclo"
        android:text="@string/btnRegresarGCiclo" />


</TableLayout>

