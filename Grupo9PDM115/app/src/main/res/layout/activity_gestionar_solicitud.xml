<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Solicitud.GestionarSolicitud">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titGestionarSolicitud"
                android:textSize="30sp"
                android:paddingBottom="5dp"
                />
            <Button
                android:id="@+id/btnNuevoFeriado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNuevoGSolicitud"
                android:text="@string/btnNuevoGSolicitud"
                tools:ignore="OnClick" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtListaSolicitud"
                android:textSize="20sp"
                android:paddingBottom="5dp"
                />
            <ListView
                android:id="@+id/listaSolicitud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>