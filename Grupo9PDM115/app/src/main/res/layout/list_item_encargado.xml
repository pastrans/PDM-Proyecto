<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft= "16dp"
    android:paddingRight= "16dp"
    android:paddingTop="8dp">

   <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="Nombre"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Nombre del usuario" />
    <TextView
        android:id="@+id/txtIdUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        tools:text="Id Usuario"
        android:layout_alignLeft="@+id/txtNombreUsuario"
        android:layout_below="@id/txtNombreUsuario"/>

   <TextView
        android:id="@+id/txtIdEncargado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNombreUsuario"
        android:layout_below="@id/txtIdUsuario"
        android:text="Nombre"
        tools:text="Id Encargado" />

</RelativeLayout>