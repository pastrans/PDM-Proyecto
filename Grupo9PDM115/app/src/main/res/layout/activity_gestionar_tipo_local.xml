<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".GestionarTipoLocal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gestionarTipoLocal"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
    <TableRow>

        <TextView android:text="@string/nombreTipoLocal" />
        <EditText
            android:id="@+id/nombreTipoLocal"
            android:inputType="text"
            android:maxLength="25" />
    </TableRow>
    <Button
        android:onClick="nuevoTipoLocal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/nuevoTipoLocal"
        tools:ignore="OnClick" />

    <Button
        android:onClick="editarTipoLocal"
        android:text="@string/editarTipoLocal"
        tools:ignore="OnClick" />

    <Button
        android:onClick="eliminarTipoLocal"
        android:text="@string/eliminarTipoLocal"
        tools:ignore="OnClick" />

    <Button
        android:onClick="atrasTipoLocal"
        android:text="@string/regresarTipoLocal"
        tools:ignore="OnClick" />
</TableLayout>