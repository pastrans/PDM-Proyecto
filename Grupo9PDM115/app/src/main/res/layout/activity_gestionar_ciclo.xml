<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1">
    // cambiar a wrap_content el height

    <TextView
        android:text="@string/gestionarCiclo"
        android:textSize="30sp"
        android:paddingBottom="5dp"
        />
    <TableRow>
        <TextView android:text="@string/idCiclo" />
        <EditText
            android:id="@+id/editIdciclo"
            android:inputType="numberDecimal"
            android:maxLength="30"
            />

    </TableRow>
    <TableRow>
        <TextView android:text="@string/nombreCiclo" />
        <EditText
            android:id="@+id/editNombreCiclo"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>
        <Button
            android:onClick="consultarCiclo"
            android:text="@string/consultarCiclo" />
    </TableRow>

    <Button
        android:onClick="nuevoCiclo"
        android:text="@string/nuevoCiclo" />

    <Button
        android:onClick="editarCiclo"
        android:text="@string/editarCiclo" />

    <Button
        android:onClick="eliminarCiclo"
        android:text="@string/eliminarCiclo" />

    <Button
        android:onClick="atrasCiclo"
        android:text="@string/atrasCiclo" />


</TableLayout>

