<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Activities.Solicitud.GestionarSolicitud"
    android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titGestionarSolicitud"
                android:textSize="30sp"
                android:paddingBottom="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:paddingBottom="5dp">
                <Button
                    android:id="@+id/btnNuevoGSolicitud"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="btnNuevoGSolicitud"
                    android:drawableStart="@drawable/ic_boton_agregar"
                    android:drawableLeft="@drawable/ic_boton_agregar"/>
                <Button
                    android:id="@+id/btnBuscarCiclo"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="buscarCiclo"
                    android:drawableStart="@drawable/ic_boton_buscar"
                    android:drawableLeft="@drawable/ic_boton_buscar"
                    tools:ignore="OnClick" />
                <EditText
                    android:id="@+id/editNombreCiclo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Nombre de la solicitud"
                    android:inputType="text"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtListaSolicitud"
                android:textSize="20sp"
                android:paddingBottom="5dp"
                />
            <ListView
                android:id="@+id/listaSolicitud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null" />
        </LinearLayout>
</LinearLayout>