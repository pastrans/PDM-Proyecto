<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".GestionarUnidad">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gestionarUnidad"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <TableRow>

        <TextView android:text="@string/nombreent" />
        <EditText
            android:id="@+id/editNombreUnidad"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <Button
        android:onClick="nuevoUnidad"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/nuevoUnidad" />
        <!--tools:ignore="OnClick" /-->

    <Button
        android:onClick="editarUnidad"
        android:text="@string/editarUnidad"
        tools:ignore="OnClick" />

    <Button
        android:onClick="eliminarUnidad"
        android:text="@string/eliminarUnidad"
        tools:ignore="OnClick" />

    <Button
        android:onClick="atrasUnidad"
        android:text="@string/atrasUnidad"
        tools:ignore="OnClick" />

</TableLayout>