<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".GestionarUsuario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titGestionarUsuario"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <TableRow>

        <TextView android:text="@string/txtNombreUsuario" />
        <EditText
            android:id="@+id/editNombreUsuario"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="@string/btnNuevoGUsuario"
        android:text="@string/btnNuevoGUsuario" />
    <!--tools:ignore="OnClick" /-->

    <Button
        android:onClick="@string/btnEditarGUsuario"
        android:text="@string/btnEditarGUsuario"
        tools:ignore="OnClick" />

    <Button
        android:onClick="@string/btnEliminarGUsuario"
        android:text="@string/btnEliminarGUsuario"
        tools:ignore="OnClick" />

    <Button
        android:onClick="@string/btnRegresarGUsuario"
        android:text="@string/btnRegresarGUsuario"
        tools:ignore="OnClick" />

</TableLayout>